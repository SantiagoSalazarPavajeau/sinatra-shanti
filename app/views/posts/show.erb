<header>
  <h1>Current Posts</h1>
</header>

<section>
<article>
  <div class="col-md-6 text-center justify-content-center">
    <% if flash[:message] %>
      <div class="alert alert-success">
    <%=flash[:message]%>
  </div>
  <% end %>
    <div class="card">
      <div class="card-header">
        <h1 class="card-title"><%=@post.title%></h1>
        <h1 class="card-title"><%=@post.content%></h1>
      </div>
        <div class="card-body">
          <div class="row">
            <div class="col">
            
   <% if is_logged_in? && current_user.posts.find_by_id(@post.id)%>

            <form class="" action="/posts/<%=@post.id%>/edit" method="POST"> 
               <input type="hidden" id="hidden" name="_method" value="get"> 
               <input type="submit" class="btn btn-outline-danger btn-lg btn-block" value="Edit Post"> 
              </form> 
            </div>
          </div>
        </div>
    <div class="card-body">
      <div class="row">
        <div class="col">
          <form class="" action="/posts/<%=@post.id%>" method="POST">
            <input type="hidden" id="hidden" name="_method" value="delete">
            <input type="submit" class="btn btn-outline-danger btn-lg btn-block" value="Delete Post">
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>
</article>
</section>
